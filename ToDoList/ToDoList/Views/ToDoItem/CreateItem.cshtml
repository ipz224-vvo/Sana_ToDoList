
@using ToDoList.DAL.Implementations;
@using ToDoList.DAL.Models;
@model ToDoItem

<style>
    select{
        margin: 10px
    }
    
    .set_date{
        display: flex;
        flex-direction: column;
    }
    .check{
        
    }
</style>

<h4>Створити таск</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateItem">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Text" class="control-label">Текст таску: </label>
                <input asp-for="Text" class="form-control" />
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Due_Date" class="control-label">Дата до котрої треба виконати завдання: </label>
                <input asp-for="Due_Date" class="form-control" />
                <span asp-validation-for="Due_Date" class="text-danger"></span>
            </div>
            <!--Створення випадаючого меню з категоріями-->
            @{
                var categories = (new CategoryDAL()).GetCategories();
                
                <div>Вибір категорії: </div>
                <select asp-for="Category">
                    @foreach(var item in categories)
                    {
                        <option>@item.Name</option>
                    }
                </select>
            }
            
            <div class="form-group">
                <label asp-for="Set_Date" class="control-label">Дата додавання таску: </label>
                <input asp-for="Set_Date" class="form-control set-date" />
                <span asp-validation-for="Set_Date" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Is_Finished" /> Чи завершено завдання?
                    
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Поверенення до списку</a>
</div>

